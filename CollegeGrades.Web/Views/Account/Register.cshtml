@model CollegeGrades.Models.AccountViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header-filter padding-top-2" id="full-bg">
    <div class="container">
        <div class="row">
            <div class="col col-lg-6 col-md-8 ml-auto mr-auto">
                <div class="card card-signup">
                    <form class="form" method="post">
                        <div class="card-header card-header-primary text-center margin-bottom-2">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                            <div class="social-line">
                                <a href="#pablo" class="btn btn-just-icon btn-link">
                                    <i class="fa fa-facebook-square"></i>
                                </a>
                                <a href="#pablo" class="btn btn-just-icon btn-link">
                                    <i class="fa fa-twitter"></i>
                                </a>
                                <a href="#pablo" class="btn btn-just-icon btn-link">
                                    <i class="fa fa-google-plus"></i>
                                </a>
                            </div>
                        </div>
                        <p class="description text-center">or be classical</p>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly"></div>

                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" type="text" class="form-control">
                            <span asp-validation-for="FirstName" class="form-text text-danger margin-bottom-2"></span>

                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" type="text" class="form-control">
                            <span asp-validation-for="LastName" class="form-text text-danger margin-bottom-2"></span>

                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="text" class="form-control">
                            <span asp-validation-for="Email" class="form-text text-danger margin-bottom-2"></span>

                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control">
                            <span asp-validation-for="Password" class="form-text text-danger margin-bottom-2"></span>

                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="ConfirmPassword" class="form-text text-danger margin-bottom-2"></span>
                        </div>
                        <div class="footer text-center margin-bottom-2">
                            <button type="submit" class="btn btn-primary btn-wd btn-lg">REGISTER</button>
                            <a asp-action="login" class="btn btn-primary btn-link btn-wd btn-lg">LOG IN</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>